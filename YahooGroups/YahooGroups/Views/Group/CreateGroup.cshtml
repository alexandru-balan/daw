@model YahooGroups.Models.GroupModels
@{
    ViewBag.Title = "Create a new group";
}

<h1>@ViewBag.Title</h1>
<hr />
<br />

<form method="post" action="/Group/CreateGroup/@ViewBag.ModeratorId">

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    @Html.Label("GroupName", "Group Name")
    <br />
    @Html.TextBox("GroupName", null, new { @class = "form-control" })
    <br /><br />

    @Html.Label("GroupDescription", "Group Description")
    <br />
    @Html.TextBox("GroupDescription", null, new { @class = "form-control" })
    <br /><br />

    @Html.LabelFor(model => model.privateGroup)
    <br />
    @Html.CheckBoxFor(model => model.privateGroup)
    <br /><br />

    @Html.LabelFor(model => model.CategoryId)
    <br />
    @Html.DropDownListFor(model => model.CategoryId, new SelectList(ViewBag.Categories, "Value", "Text"), "Pick a category", new { @class = "form-control" })
    <br /><br />

    <button class="btn btn-success" type="submit">Create Group</button>
</form>

